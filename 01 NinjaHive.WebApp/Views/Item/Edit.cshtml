}


<div class="">
    @using (Html.BeginForm())
    {
        <header class="modal-header">
            <h2 class ="text-primary " style="font-size: 24px; font-weight:bold; margin-bottom: 0px; vertical-align:bottom; position:relative;">Details: @Model.Name</h2>
            <div style="position:relative; margin-top: 10px;"><input type="submit" value="Save" name="Save" class="btn btn-default"/>@Html.ActionLink("Delete Item", "Delete", Model, new { @class = "btn btn-default", style = "margin-left: 10px;"})</div>
        </header>

        <div class="panel-default" style="">
            <div class="col-lg-7 panel panel-heading" style="margin: 0; padding: 0; left: 0; margin-top: 10px; margin-bottom: 10px; min-height: 580px;">
                <div class="panel-heading panel-title" style="background: rgb(53, 106, 181); color:white; text-indent: 10px;">
                    General Informations
                </div>

                <table class="table table-bordered text-right text-uppercase" style="bottom: 0; margin:0; padding:0; min-height: 220px; height: 540px; position: relative;">
                    <tr>
                        <td style="vertical-align: middle; font-weight:bold;"> Name </td>
                        <td> @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @style = "max-width: 100%;" })</td>
                    </tr>
                    <!--<tr>
                        <td style="vertical-align: middle;  font-weight:bold;"> Type </td>
                        <td>
                            @{
                                var items = new List<SelectListItem>
                                {
                                    new SelectListItem
                                    {
                                        Text = "Type",
                                        Value= "Type",
                                        Selected= true,
                                    },

                                        new SelectListItem
                                    {
                                        Text = "Type2",
                                        Value= "Type2",
                                        Selected= false,
                                    },
                                    
                                        new SelectListItem
                                    {
                                        Text = "Type3",
                                        Value= "Type3",
                                        Selected= false,
                                    },
                                    
                                        new SelectListItem
                                    {
                                        Text = "Type4",
                                        Value= "Type4",
                                        Selected= false,
                                    },
                                };
                            }

                            @Html.DropDownList("temp", items, new { @class = "form-control", @style = "max-width: 100%;" })
                        </td>
                    </tr>-->
                    <tr style="height: 100%;">
                        <td><span style="top: 7px; position:relative; font-weight:bold;"> Description </span></td>
                        <td> @Html.TextArea("temp", new { @class = "form-control", @style = "max-width: 100%; resize:none; min-height: 110px; text-align: justify; text-justify: auto; height: 100%; bottom: 0;" }) </td>
                    </tr>
                    <tr>
                        <td style="vertical-align: middle; font-weight:bold;"> Type </td>
                        <td>
                                @{
                                var types = new List<SelectListItem>
                                {
                                    new SelectListItem
                                    {
                                        Value = "TypeEquipment",
                                        Text  = "Equipment",
                                        Selected= true,
                                    },

                                        new SelectListItem
                                    {
                                        Value = "TypeItem",
                                        Text  = "Item",
                                        Selected= false,
                                    },
                                };
                            }
                            @Html.DropDownList("temp", types, new { @class = "form-control", @style = "max-width: 100%;" })
                        </td>
                    </tr>
                    <tr>
                        <td style="vertical-align: middle; font-weight:bold;"> Improvements </td>
                        <td style="display: flex; justify-content: space-between; margin-left: 10px; margin-right: 10px; border: none;">
                            @Html.CheckBox("temp", false)
                            @Html.CheckBox("temp", false)
                            @Html.CheckBox("temp", false)
                            @Html.CheckBox("temp", false)
                            @Html.CheckBox("temp", false)
                        </td>
                    </tr>
                    <tr>
                        <td style="vertical-align: middle; font-weight:bold;"> Duration </td>
                        <td>
                            @{
        var periods = new List<SelectListItem> {
                                    new SelectListItem
                                    {
                                        Value = "periodDay",
                                        Text  = "Day",
                                        Selected= true,
                                    },
                                    
                                    new SelectListItem
                                    {
                                        Value = "periodMonth",
                                        Text  = "Month",
                                        Selected= true,
                                    },
                                    
                                    new SelectListItem
                                    {
                                        Value = "periodYear",
                                        Text  = "Year",
                                        Selected= true,
                                    }
                                };
                            }

                            @Html.DropDownList("temp", periods, new { @class = "form-control", @style = "max-width: auto; float:left;" })
                            @Html.TextBox("temp", "", new { @type="number", @style="width:70px; float:right;" , @class = "form-control"})
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    <div class="panel-default col-lg-4 col-lg-push-1" style="margin-top: 10px; margin-bottom: 10px; padding: 0;">
        <div style="padding-bottom: 10px;">
            <canvas id="sparkViewer" width="800" height="600" style="max-width:100%; display:table-column;">
                You have to update your broswer to use the SparkViewer viewer
            </canvas>
        </div>
        <div style="">
            <img id="" width="800" height="600" style="max-width:100%; height:290px; display:table-column; background:black;" src="~/Content/Images/default_image.png">
        </div>
