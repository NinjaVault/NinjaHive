@using NinjaHive.WebApp.Controllers
@using NinjaHive.WebApp.Extensions
@using NinjaHive.WebApp.Helpers
@model IReadOnlyCollection<NinjaHive.WebApp.Models.UserViewModel>

<div class="row">
    <div class="page-header">
        <h2>Manage Users</h2>
        @(Html.ActionLink<AccountController>("Register user", c => c.CreateUser(), new { @class = "btn btn-primary" }))
    </div>

    @if (Model.Any())
    {
        <ul class="list-group">
            @foreach (var user in Model)
            {
                <li class="list-group-item clearfix">
                    @user.Username - 
                    <a href="mailto:@user.Email">@user.Email</a>
                </li>
            }
        </ul>
    }
    else
    {
        @Html.Partial(Partials.NoResults);
    }
</div>