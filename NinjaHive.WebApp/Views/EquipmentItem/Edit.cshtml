                                        new SelectListItem
                                        {
                                            Value = "periodDay",
                                            Text  = "Durability Points",
                                            Selected= true,
                                        },

                                        @*new SelectListItem
                                        {
                                            Value = "periodMonth",
                                            Text  = "Month",
                                            Selected= false,
                                        },

                                        new SelectListItem
                                        {
                                            Value = "periodYear",
                                            Text  = "Year",
                                            Selected= false,
                                        }*@
                                    };
                            }

                            @Html.DropDownList("temp", periods, new { @class = "form-control", @style = "width: 80%; max-width: 100%; float:left;" })
                            @Html.TextBoxFor(m => m.Durability, new { @type = "number", @min = "0", @style = "width:19%; float:right;", @class = "form-control" })
                        </td>
                    </tr>
                    <tr>
                        <td style="vertical-align: middle; font-weight:bold;"> Size </td>
                        <td>@Html.TextBox("temp", "", new { @type = "number", @style = "width:100%px; max-width: 100%;", @class = "form-control" })</td>
                    </tr>
                    <tr>
                        <td style="vertical-align: middle; font-weight:bold;"> Value </td>
                        <td>
                            @Html.TextBox("temp", "", new { @type = "number", @step = "any", @class = "form-control", @style = "max-width: 100%;" })
                        </td>
                    </tr>
                </table>
            </div>

        </div>
