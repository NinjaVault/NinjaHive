@using NinjaHive.Contract.DTOs
@using NinjaHive.WebApp.Controllers
@using NinjaHive.WebApp.Services
@model Skill[]
           
<div class="row">
    <div class="col-md-12">
        <br />
        <p>
            @Html.ActionLink("Create new Skill", "Create", null, new { @class = "btn btn-default" })
        </p>
        <hr />
        <h4>List of items in the database</h4>
    </div>
    @foreach (var item in Model)
    {
        var itemId = item.Id;
        var editUrl = UrlProvider<SkillsController>.GetUrl(c => c.Edit(itemId));
        var deleteUrl = UrlProvider<SkillsController>.GetUrl(c => c.Delete(itemId));

        <div class="col-md-2">
            <div class="thumbnail">
                <a href="@editUrl" class="thumbnail">
                    <img src="/Content/Images/default_image.png" alt="..." />
                </a>
                <div class="caption">
                    <p>@item.Name</p>
                    <p>
                        <a href="@deleteUrl"> Delete </a><br/>
                        <a href="@editUrl"> Edit </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>