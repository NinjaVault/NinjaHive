@using NinjaHive.Contract.Models
@using NinjaHive.WebApp.Controllers
@using NinjaHive.WebApp.Helpers
@using System.Collections.Generic
@model IEnumerable<SkillModel>
<div class="row">

    <div class="page-header">
        <h2>Skills</h2>
        <a href="@(UrlProvider<SkillsController>.GetUrl(c => c.Create()))" class="btn btn-primary">Create new Skill</a>
    </div>

    <div class="col-md-12">
        @if (Model.Any())
        {
            foreach (var letter in Model.GroupBy(m => Char.ToUpper(m.Name[0])))
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @letter.Key
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(m => letter)
                    </div>
                </div>
            }
        }
        else
        {
            @Html.Partial(Partials.NoResults)
        }
    </div>
</div>