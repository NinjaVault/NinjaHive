@using NinjaHive.WebApp.Controllers
@using NinjaHive.WebApp.Extensions
@model NinjaHive.Contract.Models.SkillModel

<div class="row">
    <div class="page-header">
        @using (Html.BeginForm<SkillsController>(m => m.Delete(Model.Id), new { @class = "form-delete pull-right" }))
        {
            @Html.AntiForgeryToken();
            @Html.HiddenFor(m => m.Id)

            <input type="submit" class="btn btn-danger" value="Delete" />
        }
        <h2>Skills <small>Edit</small></h2>
    </div>


    @using (Html.BeginForm<SkillsController>(m => m.Edit(Model), new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken();
        @Html.EditorForModel()
        
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" class="btn btn-primary" value="Save changes" />
            </div>
        </div>
    }

    <script>
        ninjaHive.promptBeforeDelete();
    </script>
</div>