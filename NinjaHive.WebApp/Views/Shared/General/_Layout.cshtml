@using NinjaHive.WebApp.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="NinjaHive WebApp" />
    <meta name="keywords" content="ninjahive" />

    <title>
        NinjaHive
        @if (System.Configuration.ConfigurationManager.AppSettings.Get("isTestEnvironment") == "true")
        {
            var version = typeof(Startup).Assembly.GetName().Version;
            @($"v{version.Major}.{version.Minor}.{version.Build}.alpha")
        }
        
    </title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("JavaScript", required: false)
    @RenderSection("PageStyles", required: false)

</head>

<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/ninjahive")
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">NINJAHIVE</a>
            </div>

            <div id="navbar" class="navbar-collapse collapse">
                @Html.Partial(Partials.NavbarNav)
                @Html.Partial(Partials.Login)
            </div>
        </div>

        <div class="navbar-subnav">
            <div class="container">
                @RenderSection("SubNavigation", required: false)
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <footer class="modal-footer" style="position: relative; clear: both; top: 10px;">
            <p>
                &copy; @DateTime.Now.Year -
                <a href="http://ninjavault.biz/">NinjaVault</a>
            </p>
        </footer>
    </div>
    
    @RenderSection("scripts", required: false)
</body>
</html>
