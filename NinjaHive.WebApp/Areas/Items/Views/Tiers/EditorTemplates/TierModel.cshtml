@using NinjaHive.Contract.Models

@model TierModel

@Html.HiddenFor(m => m.Id)
<div class="col-md-12">
    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group">
            @Html.LabelFor(m => m.TierRank, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.TierRank, new { @class = "form-control", type = "number", min = "0" })
                @Html.ValidationMessageFor(m => m.TierRank, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    @Html.EditorFor(m => m.StatInfo)
</div>
