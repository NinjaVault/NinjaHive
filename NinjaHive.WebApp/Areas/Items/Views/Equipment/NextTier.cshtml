@using NinjaHive.WebApp.Areas.Items.Controllers
@using NinjaHive.WebApp.Areas.Items.Models
@using NinjaHive.WebApp.Extensions
@model NextTierViewModel
    
<div class="row">
    <div class="page-header">
        <h2>
            Equipment Item Next Tier <small>Create</small>
        </h2>
    </div>

    <div>Tier rank <span class="badge">@Model.Tier</span></div>

    @using (Html.BeginForm<EquipmentController>(c => c.NextTier(Model), new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ParentTierId)
        @Html.FormGroupFor(m => m.Name)
        @Html.FormGroupFor(m => m.Description, new { @class = "form-control", rows = "4" })

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" class="btn btn-primary" value="Create Next Tier" />
            </div>
        </div>
    }

</div>