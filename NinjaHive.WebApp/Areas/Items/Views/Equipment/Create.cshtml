@using NinjaHive.WebApp.Areas.Items.Controllers
@using NinjaHive.WebApp.Areas.Items.Models
@using NinjaHive.WebApp.Extensions
@using NinjaHive.WebApp.Helpers

@model EquipmentViewModel

@Scripts.Render("~/bundles/ninjahive")
<div class="row">
    <div class="page-header">
        <h2>
            Equipment <small>Create</small>
        </h2>
    </div>

    @using (Html.BeginForm<EquipmentController>(c => c.Create(null), new {@class = "form-horizontal", role = "form", name = "createEquipmentForm"}))
    {
        @Html.AntiForgeryToken()
        @Html.EditorForModel()
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" class="btn btn-primary" value="Create Equipment"/>
            </div>
        </div>
    }

    <script>
        @{var validateUrl = UrlProvider<EquipmentController>.GetUrl(c => c.GetEquipmentJson(null));}
        ninjaHive.enforceUniqueValue(document.forms["createEquipmentForm"], "Name", "@validateUrl");
    </script>
</div>